<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/image_grayView"
        android:layout_width="125dp"
        android:layout_height="match_parent"
        android:background="@color/lightGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:scaleType="centerCrop"

        />
    <View
        android:id="@+id/title_grayView"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/lightGray"
        app:layout_constraintLeft_toRightOf="@id/image_grayView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"/>
    <View
        android:id="@+id/body_grayView"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:background="@color/lightGray"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/title_grayView"
        app:layout_constraintLeft_toRightOf="@id/image_grayView"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/heart_slot_gray"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/lightGray"
        app:layout_constraintTop_toBottomOf="@id/body_grayView"
        android:layout_marginTop="10dp"/>
    <View
        android:id="@+id/time_slot_gray"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toLeftOf="@id/book_slot_gray"
        app:layout_constraintLeft_toRightOf="@id/heart_slot_gray"
        android:background="@color/lightGray"
        app:layout_constraintTop_toBottomOf="@id/body_grayView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <View
        android:id="@+id/book_slot_gray"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@id/time_slot_gray"
        android:background="@color/lightGray"
        app:layout_constraintTop_toBottomOf="@id/body_grayView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>