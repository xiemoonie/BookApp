<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/lightGray</item>
        <item name="colorAccent">@color/skyblue</item>
        <item name="actionModeBackground">@color/contextualActionBarColor</item>
    </style>

    <style name="DetailsActivityStyle"  parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blueNice</item>
        <item name="colorPrimaryDark">@color/lightGray</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="SplashScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bookapp</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="CustomChipStyle" parent ="Widget.MaterialComponents.Chip.Filter">
        <item name = "chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="background">@color/actionBarBackgroundColor</item>
        <item name="tabIndicatorColor"> @color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="CustomTabTextStyle" parent ="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>